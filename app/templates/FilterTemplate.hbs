<div class="input-group" id={{id}} style="margin:7px">
    <span class="form-control">
    	{{{name}}}
    	<textarea tabindex="{{index2}}" rows="1" cols="20"  style="float:right; resize:none; overflow: hidden; margin-left:6px">{{extent.[1]}}</textarea>
    	<textarea tabindex="{{index1}}" rows="1" cols="20" style="float:right; resize:none; overflow: hidden;">{{extent.[0]}}</textarea>
    </span>
    <span class="input-group-btn">
    	<button tabindex="{{index3}}" rows="1" class="btn btn-danger delete-filter" type="button">
    		<i class="fa fa-minus-circle"></i>
    	</button>
    </span>
</div>

