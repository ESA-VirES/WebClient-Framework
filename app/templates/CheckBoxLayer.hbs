<div class="input-group input-group-sm input">
    <span class="input-group-addon">
        <input type="checkbox" {{#if visible}}checked="checked"{{/if}}/>
    </span>
    <span class="form-control">{{name}}</span>
    <span class="input-group-addon">
        <i class="fa fa-sort"></i>
        {{#if info}}<i class="fa fa-info-circle" style="cursor:pointer;" tabindex="0" data-toggle="popover" data-container=".layercontrol .panel-body" data-html="true" data-content="{{info}}"></i>{{/if}}
        <i class="fa fa-sliders" style="cursor:pointer;"></i>
        <i class="fa fa-square" style="color: {{color}}"></i>
        <!--<i class="fa fa-adjust" data-toggle="popover" data-content="n" style="cursor:pointer;"></i>-->
    </span>
</div>
